SELECT * FROM Books;
SELECT * FROM Books WHERE Status='Available';
UPDATE Books SET Status='Issued' WHERE BookID=1;
INSERT INTO Issue (IssueID, BookID, MemberID, IssueDate, ReturnDate) VALUES (1002, 2, 102, '2025-11-03', NULL);
UPDATE Books SET Status='Available' WHERE BookID=1;
UPDATE Issue SET ReturnDate='2025-11-03' WHERE IssueID=1001;
